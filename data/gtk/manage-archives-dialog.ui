<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ManageArchivesDialog" parent="AdwDialog">
    <property name="title" translatable="yes">Manage Archives</property>
    <property name="content-height">480</property>
    <property name="content-width">580</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar" />
        </child>
        <property name="content">
          <object class="AdwPreferencesPage">
            <property name="title" translatable="yes">Manage Archives</property>
            <property name="icon-name">archive-symbolic</property>

            <child>
              <object class="GtkStack" id="archives_stack">
                <child>
                  <object class="GtkStackPage">
                    <property name="name">empty-page</property>
                    <property name="child">
                      <object class="AdwStatusPage">
                        <property name="icon-name">archive-symbolic</property>
                        <property name="title" translatable="yes">Import Archives</property>
                        <property name="description" translatable="yes">Import archives to view their contents</property>
                        <style>
                          <class name="compact"/>
                        </style>
                        <property name="child">
                          <object class="GtkButton">
                            <property name="label" translatable="yes">Importâ€¦</property>
                            <signal name="clicked" handler="_on_import_zim_archives_action_cb" object="ManageArchivesDialog" swapped="no" />
                            <property name="halign">center</property>
                            <style>
                              <class name="pill"/>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">archives-list-page</property>
                    <property name="child">
                      <object class="AdwPreferencesPage">
                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="header-suffix">
                              <object class="GtkButton">
                                <signal name="clicked" handler="_on_import_insert_zim_archives_action_cb" object="ManageArchivesDialog" swapped="no" />
                                <property name="child">
                                  <object class="AdwButtonContent">
                                    <property name="icon-name">list-add-symbolic</property>
                                    <property name="label" translatable="yes">Import Archives</property>
                                  </object>
                                </property>
                                <style>
                                  <class name="flat" />
                                </style>
                              </object>
                            </property>
                            <child>
                              <object class="GtkListBox" id="archives_list_box">
                                <property name="selection-mode">none</property>
                                <style>
                                  <class name="boxed-list" />
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>

  </template>
</interface>
